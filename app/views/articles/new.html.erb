<%= form_for :article, url: articles_path do |f| %>

<% if @article.errors.any? %>
    <div id="error_description">
      <h2>
        <%= pluralize(@article.errors.count, "field/s") %>:  is/are not filled out
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %> 

 <p>
  <%= f.label :tile %><br>
  <%= f.text_field :title %>
 </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
   <%= f.label :author %><br>
   <%= f.text_field :author %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<br>

<%= link_to 'Get me back', articles_path %>
