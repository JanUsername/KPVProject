<h1>All Articles</h1>

<table>
 <tr>
  <th>Title</th>
  <th>Text</th>
  <th>Author</th>
 </tr>

 <% @articles.each do |article| %>
  <tr>
   <td><%= article.title %></td>
   <td><%= article.text %></td>
   <td><%= article.author %></td>
   <td><%= button_to 'Show', article_path(article) %></td>
   <td><%= button_to 'Edit', edit_article_path(article) %></td>
  </tr>
 <% end %>
</table>


<%= link_to 'New article', new_article_path %>
